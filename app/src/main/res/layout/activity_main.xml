<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.group14.events_near_me.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <fragment
        android:name="com.group14.events_near_me.MainMapFragment"
        android:id="@+id/mainMapFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.50"/>
    <fragment
        android:name="com.group14.events_near_me.MainFilterFragment"
        android:id="@+id/mainFilterFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <fragment
        android:name="com.group14.events_near_me.MainListFragment"
        android:id="@+id/mainListFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
